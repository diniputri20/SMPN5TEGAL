<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EkskulActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="188dp"
                        app:sliderAnimationDuration="1200"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="700"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true" />

                </RelativeLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="com.google.android.appbar.AppBarlayoutc$ScrolingviewBehavior">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">

                        <GridLayout
                            android:id="@+id/mainGrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="9"
                            android:alignmentMode="alignMargins"
                            android:columnCount="1"
                            android:columnOrderPreserved="false"
                            tools:layout_editor_absoluteX="14dp"
                            tools:layout_editor_absoluteY="16dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="85dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:backgroundTint="#A0522D">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:onClick="pramuka"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/logopramuka">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:textColor="#FFFFFF"
                                        android:text="ORGANISASI PRAMUKA">

                                    </TextView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="85dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:backgroundTint="#6495ED">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:onClick="pmr"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:backgroundTint="#6495ED"
                                        android:src="@drawable/logopmr2">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:textColor="#FFFFFF"
                                        android:text="ORGANISASI PMR">

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="85dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:backgroundTint="#DAA520">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:onClick="voly"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/logovoly2">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:textColor="#FFFFFF"
                                        android:text="BOLA VOLY">

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="85dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:backgroundTint="#FFD700">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:onClick="pencaksilat"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/logopencak">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:textColor="#FFFFFF"
                                        android:text="PENCAK SILAT">

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="85dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:backgroundTint="#000000">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:onClick="paskib"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/logopaskibraka">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:textColor="#FFFFFF"
                                        android:text="PASKIBRA">

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="85dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp"
                                android:backgroundTint="#FFFFFF">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:onClick="teater"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/teater3">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="50dp"
                                        android:textColor="#000000"
                                        android:text="SENI TEATER">

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </GridLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </ScrollView>
    </FrameLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            Header-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ViewFlipper
                    android:id="@+id/viewFlipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/uptdsmp5"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/guru6"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/smp5tegal"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/kepsek"/>

                </ViewFlipper>

            </RelativeLayout>
            <!--           penutup header-->

            <!-- menu 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="410dp"
                android:layout_height="90dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:onClick="profil"
                    android:background="#E5E5E6">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/profil"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="SMP NEGERI 5 KOTA TEGAL"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- penutup menu 1-->

            <!--            pembuka variabel menu 2 dan 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                <!--                menu 2-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:onClick="fasilitas"
                        android:src="@drawable/fasilitas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="FASILITAS"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <!--                penutup menu 2-->
                <!-- menu 3-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:onClick="guru"
                        android:src="@drawable/gurulogo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="GURU"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <!--                penutup menu 3-->
            </LinearLayout>
            <!--            penutup variabel menu 2 dan 3-->

            <!--            pembuka variabel menu 4, 5 dan 6-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">
                <!--                menu 4-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:onClick="ekskul"
                        android:src="@drawable/ekskul" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="EKSKUL"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <!--                penutup menu 4-->
                <!-- menu 5-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:onClick="galeri"
                        android:src="@drawable/galerilogo1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="GALERI"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <!--                penutup menu 5-->
                <!--- menu 6-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="prestasi"
                        android:src="@drawable/logoprestasi2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="FASILITAS"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <!-- penutup menu 6-->
            </LinearLayout>
            <!--            penutup variabel menu 4, 5 dan 6-->

            <!--            pembuka variabel menu 7 dan 8-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                <!--                menu 7-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:onClick="perpus"
                        android:src="@drawable/perpus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="E-PERPUS"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <!--                penutup menu 7-->
                <!-- menu 8-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:onClick="siapppdb"
                        android:src="@drawable/ppdb1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="SIAP PPDB"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
                <!--                penutup menu 8-->
            </LinearLayout>
            <!--            penutup variabel menu 7 dan 8-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
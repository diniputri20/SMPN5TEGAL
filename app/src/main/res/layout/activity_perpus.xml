<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerpusActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="210dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/headerperpus" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">

                    <GridLayout
                        android:id="@+id/mainGrid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:alignmentMode="alignMargins"
                        android:columnCount="1"
                        android:columnOrderPreserved="false">

                        <!--                            pembuka menu 1-->
                        <androidx.cardview.widget.CardView
                            android:onClick="buku7"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/bukukls8">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:text="BUKU KELAS VII">

                                </TextView>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <!--                            penutup menu 1-->

                        <!--                            pembuka menu 2-->

                        <androidx.cardview.widget.CardView
                            android:onClick="buku8"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/bukukls9">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:text="BUKU KELAS VIII">

                                </TextView>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <!--                            penutup menu 2-->


                        <!--                            pembuka menu 3-->
                        <androidx.cardview.widget.CardView
                            android:onClick="buku9"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/bukukls7">

                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:text="BUKU KELAS IX">

                                </TextView>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <!--                            penutup menu 3-->

                    </GridLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>


        </ScrollView>
    </FrameLayout
>
</RelativeLayout>